<h1>Kits</h1>

<table>
  <thead>
    <tr>
      <th>Location</th>
      <th>Is active</th>
      <th>Blackout</th>
      <th>Reserved</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kits.each do |kit| %>
      <tr>
        <td><%= kit.location %></td>
        <td><%= kit.is_active %></td>
        <td><%= kit.blackout %></td>
        <td><%= kit.reserved %></td>
        <td><%= link_to 'Show', kit %></td>
        <td><%= link_to 'Edit', edit_kit_path(kit) %></td>
        <td><%= link_to 'Destroy', kit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Kit', new_kit_path %>
