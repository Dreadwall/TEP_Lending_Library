<div class="grid-container">
    <div class="grid-x">
      <div class="inner-title cell-block-x small-12">
        <span class="uline"><h1>Kit: <%= @kit.location %></h1> </span>
      </div>
    </div>
    
  <div class="grid-x grid-margin-x">
    <div class="cell-block-container cell auto">
      <div class="cell-block-y small-6" id="component-block">
        <p> Kit Details</p>
        <p> Kit Location <%= @kit.location %> </p>
        <p> Active <%= @kit.is_active ? "Yes" : "No" %> </p> 
        <p> Blackout <%= @kit.blackout ? "Yes" : "No" %> </p>
      </div>
    </div>

  <% if @kit.items.size > 0 %>
    <div class="grid-x grid-margin-x">
      <div class="cell-block-container cell auto">
        <div class="cell-block-y small-6" id="component-block">
         <table class="item-table">
          <thead>
            <th>Name</th>
            <th>Condition</th>
          </thead>
          <tbody>
            <% @kit.items.each do |item| %>
              <tr>
                <td><%= link_to item.item_category.name, item_path(item)=%></td>
                <td style="text-align:center;"><%= item.condition %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        </div>
      </div>
    </div>
  <% end %>


  </div>
  <div class="side-link">
    <%= link_to edit_kit_path(@kit), :class => 'button radius small' do %>
      EDIT   <i class="fas fa-pencil-alt"></i>
    <% end %>
  </div>
</div>
