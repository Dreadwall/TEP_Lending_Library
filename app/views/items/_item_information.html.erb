<h5>Item Information</h5>
<br/>
<table>
  <tbody>
    <tr>
      <td>Item Location</td>
      <% if @item.kit.nil? %>
        <td>Item not in a kit</td>
      <% else %>
        <td><%= link_to @item.kit.location, @item.kit %></td>
      <% end %>
    </tr> 
    <tr>
      <td>Item Condition</td>
      <td><%= @item.condition %> </td>
    </tr>
    <tr>
      <td>Item Category</td>
      <td><%= @item.item_category.name %></td>
    </tr>
    <tr>
      <td>Active</td>
      <td><%= @item.is_active %></td>
    </tr>
  </tbody>
</table>
<br/>