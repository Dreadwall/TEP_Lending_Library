  <div class="grid-x grid-margin-x">
    <div class='cell auto'>
      <table>
        <thead>
          <tr>
            <th class="item-edit-head"> Location </th>
            <td>
              <%= f.simple_fields_for :kit do |g| %>
                <%= g.input :location, disabled: true, :input_html => { :class => 'avg', :style => "width: 200px;"} %>
              <% end %>
            </td>
          </tr>
          <tr>
            <th class="item-edit-head"> Condition </th>
            <td>
              <%= f.input :condition, :input_html => { :class => 'avg', :style => "width: 200px;"} %>
            </td>
          </tr>

          <tr>
            <th class="item-edit-head"> Item Category </th>
            <td>
              <%= f.input :item_category, disabled: true, :input_html => { :value => @item.item_category.name, :class => 'avg', :style => "width: 200px;"} %>
            </td>
          </tr>

          <tr>
            <th class="item-edit-head"> Active </th>
            <td>
              <%= f.input :is_active, as: :boolean, :input_html => { :class => 'avg'} %>
            </td>
          </tr>
          
        </thead>
      </table>
  </div>
</div>



