<div class="cell-block-y">
  <div class="grid-container">

    <div class="grid-x">
      <div class="inner-title cell-block-x small-8 small-offset-1">
        <span class="uline"><h1>ITEMS LISTING</h1> </span>
      </div>

      <div class="cell-block-x small-2 right side-link">
        <h4><%= link_to 'New Item', new_item_path %></h4>
      </div>
    </div>

    <div class="grid-x">
      <div class="rounded information-table cell small-10 small-offset-1">
        <table>
          <thead>
            <tr id="table-head">
              <th>Item</th>
              <th>Condition</th>
              <th>Kit Location</th>
              <th>Active</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @items.each do |item| %>
              <tr>
                <td><%= item.readable_id %> </td>
                <td><%= item.condition %></td>
                <td><%= link_to item.kit.location, item.kit %></td>
                <% if item.is_active %>
                  <td id="active">Active</td>
                <% else %>
                  <td id="inactive">Inactive</td>
                <% end %>
                <td>
                  <%= link_to item do %>
                    <i class="fas fa-eye"></i>
                  <% end %>
                </td>
                <td>
                  <%= link_to edit_item_path(item) do %>
                    <i class="fas fa-edit"></i>
                  <% end %>
                </td>
                <td>
                  <%= link_to item, method: :delete, data: { confirm: 'Are you sure?' } do %>
                    <i class="fas fa-trash-alt"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>