<div class="grid-container">
  <div class="grid-x">
    <div class="inner-title cell-block-x small-8 small-offset-1">
      <span class="uline"><h1><%=controller.action_name.capitalize %> Component</h1> </span>
    </div>
  </div>

  <%= simple_form_for @component, :html => { :class => 'component-form' } do |f| %>
    <div class="grid-x">
      <div class='cell small-offset-2 small-6 component-inputs'>
        <%= f.input :name %>
        <%= f.input :max_quantity %>
        <% if controller.action_name == "edit" %>
          <%= f.input :damaged %>
          <%= f.input :missing %>
        <% end %>
        <%= f.input :item_id, :collection => Item.all, :label_method => :readable_id, input_html: {class: "avg"} %>
        <%= f.input :consumable %>
      </div>

      <div class="form-actions small-offset-2">
        <%= f.submit nil, :class => 'button radius' %>
        <%= link_to 'Cancel', home_path, :class => 'button alert radius' %>
      </div>
    </div>

  <% end %>
</div>
