<%= simple_form_for @component, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Component</legend>

    <%= f.input :name %>
		<%= f.input :max_quantity %>
    <% if controller.action_name == "edit" %>
		  <%= f.input :damaged %>
      <%= f.input :missing %>
    <% end %>
      <%= f.input :consumable %>


    <%= f.input :item_id, :collection => Item.all, :label_method => :readable_id, input_html: {class: "avg"} %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel', home_path, :class => 'button alert radius' %>
    </div>
  </fieldset>

<% end %>
