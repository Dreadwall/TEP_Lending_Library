
<div class="grid-container" id="profile">
  <div class="grid-x" id="profile-box">
    <div class="small-1 cell"></div>
    <div class="small-3 cell" id="profile-title-box">
      <br>
      <h2 class="title-text"> Edit User <br /> Information </h2>
    </div>
    <div id="user-information" class='cell small-7'>
      <%= simple_form_for @school, :html => { :class => 'form-inline user-info-form' }, defaults: {label: false} do |f| %>
      <fieldset id="profile-form">
        <table class="cell small-5" id="user-profile-form">
          <thead>
            <tr>
              <th> School Name </th>
              <td>
                <%= f.input :name, :input_html => { :class => 'avg'} %>
              </td>
            </tr>
            <tr>
              <th> Street 1 </th>
              <td>
                <%= f.input :street_1, :input_html => { :class => 'avg' }  %>
              </td>
            </tr>
            <tr>
              <th> Street 2 </th>
              <td>
                <%= f.input :street_2, :input_html => { :class => 'avg' }  %>
              </td>
            </tr>
            <tr>
              <th> Address </th>
              <td>
                <%= f.input :city, :input_html => { :class => 'avg' }  %>
              </td>
            </tr>
            <tr>
              <th> State </th>
              <td>
                <%= f.input :state, :input_html => { :class => 'avg' }  %>
              </td>
            </tr>
            <tr>
              <th> Zip Code </th>
              <td>
                <%= f.input :zip, :input_html => { :class => 'avg' }  %>
              </td>
            </tr>
          </thead>
        </table>
      </fieldset>
    </div>
  </div>

  <div class="grid-x">
    <div class="form-actions cell auto large-offset-6 right" id="school-user">
      <%= f.button :submit, "Save", :class => 'button success radius' %>
      <%= link_to 'Cancel', :back, :class => 'button radius' %>
    </div>
    <div class="cell small-1"></div>
  </div>
  <% end %>
</div>