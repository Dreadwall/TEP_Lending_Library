<div class="cell-block-y">
  <div class="grid-container">

    <div class="grid-x">
      <div class="inner-title cell-block-x small-10">
        <span class="uline"><h1>SCHOOLS</h1> </span>
      </div>
    </div>

    <div class="rounded information-table">
      <table>
        <thead>
          <tr id="table-head">
            <th>Name</th>
            <th>Address</th>
            <th>Teachers</th>
            <th>Current Rentals</th>
            <th>Active?</th>
          </tr>
        </thead>

        <tbody>
          <% @schools.each do |school| %>
            <tr>
              <td><%= school.name %></td>
              <td>
                <%= school.street_1 %>,
                <%= school.street_2 %>
                <%= school.city %>,
                <%= school.state %>
                <%= school.zip %>
              </td>
              <td><%= school.users.count %></td>
              <td><%= school.owned_reservations.count %></td>
              <% if school.is_active %>
                <td id="active">active</td>
              <% else %>
                <td id="inactive">inactive</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>