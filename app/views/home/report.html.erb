              <h4>Report Title </h4><%= f.input :title %>
              <h4>Report Subtitle (Optional)</h4> <%= f.input :subtitle %>

              <h4>Report Description (Optional)</h4> <%= f.input :description, :input_html => {:style => "height: 200px;"}, as: :text %>

        </div>

        <div class="small-6 cell">
          <h4>Included in Report</h4>
          <table>
            <thead>
              <tr>
