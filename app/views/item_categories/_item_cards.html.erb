
    <div class="cell-block-y">
      <div class="grid-x">
        <div class="inner-title cell-block-x small-10">
          <span class="uline"><h1>Available Rental Kits</h1> </span>
        </div>

        <!-- TODO: add cancan -->
        <div class="cell-block-x small-2 right side-link">
          <h4><%= link_to 'Add New Item', new_item_path %></h4>
        </div>

      </div>
    </div>

    <div class="cell-block-y">
      <div class="grid-x grid-margin-x large-4 medium-2 small-1" id="card-grid">
        <% @item_categories.each do |ic| %>
        <div class="product-card-container cell-block-x">
          <div class="product-card">
            <div class="product-card-thumbnail">
              <%= render :partial => "item_picture", locals: {:item_category => ic} %>
            </div>
            <h2 class="product-card-title center"><%= ic.name %></h2>
            <div class="product-card-button center">
              <%= link_to 'Details', item_category_path(ic) %>
            </div>
          </div>
        </div>
        <% end %>
      </div>

    </div>
