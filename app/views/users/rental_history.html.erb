<div class="grid-container">
  <div class="grid-y cell-block-container">
    <div class="grid-x">
      <div class="inner-title cell-block-x small-10">
        <span class="uline"><h1>Rental History</h1> </span>
      </div>
    </div>

    <% unless @reservations.nil? || @reservations.empty? %>
      <div class="grid-x">
        <div class="small-1"></div>
        <div class="cell small-10">
          <fieldset>
            <table>
              <thead>
                <tr>
                  <th>Item</th>
                  <th>Checkout Date</th>
                  <th>Return Date</th>
                  <th>Current Status</th>
                </tr>
              </thead>

              <tbody>
                <% @reservations.each do |myr| %>
                  <tr>
                    <td><%= render :partial => "item_categories/item_picture", locals: {:item_category => myr.kit.items.first.item_category.id} %></td>
                    <td>From: <%= myr.pick_up_date.strftime("%D") %></td>
                    <td>To: <%= myr.return_date.strftime("%D") %></td>
                    <td> <%= myr.picked_up ? "Picked Up" : "Not Yet Picked Up" %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </fieldset>
        </div>
      </div>
    <% end %>

  </div>
</div>
