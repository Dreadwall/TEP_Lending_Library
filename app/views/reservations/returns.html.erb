<div class="cell-block-y">
  <div class="grid-container">
    <div class="inner-title cell-block-x small-9">
      <span class="uline"><h1>CHECK IN</h1> </span>
    </div>

  <% unless @today_return.nil? || @today_return.empty? %>
    <div class="rounded information-table">
      <table class="information-table">
        <thead>
          <tr>
            <th>School</th>
            <th style="text-align:center;">Teacher Renting</th>
            <th style="text-align:center;">Kit being Rented</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @today_return.each do |returnKit| %>
            <tr>
              <td><%= returnKit.teacher.school.name %></td>
              <td style="text-align:center;"><%= returnKit.teacher.name %></td>
              <td style="text-align:center;"><%= returnKit.kit.items.first.item_category.name %></td>
              <td>
                <%= link_to 'Drop Off', returned_url(returnKit), :class => 'button radius success', method: :patch %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <% else %>
      <p><strong>All kits returned for today.</strong></p>
    <% end %>
  </div>
</div>