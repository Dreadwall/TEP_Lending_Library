<div id="calendar">
  <h2 id="month">
    <%= link_to "<", :month => (@date.beginning_of_month-1).strftime("%Y-%m") %>
    <%= @today_pickup.strftime("%B %Y") %>
    <%= link_to ">", :month => (@date.end_of_month+1).strftime("%Y-%m") %>
  </h2>
  <% calendar_for @reservations, :year => @today_pickup.year, :month => @today_pickup.month do |calendar| %>
    <%= calendar.head('Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday') %>
    <% calendar.day(:day_method => :published_on) do |date, reservations| %>
      <%= date.day %>
      <ul>
        <% for res in reservations %>
          <li><%= link_to edit_reservation_path(@reservation) %></li>
        <% end %>
      </ul>
    <% end %>
  <% end %>
</div>
