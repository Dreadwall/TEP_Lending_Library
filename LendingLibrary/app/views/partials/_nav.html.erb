<div class="title-bar" data-responsive-toggle="responsive-menu" data-hide-for="medium">
  <button class="menu-icon" type="button" data-toggle="responsive-menu"></button>
  <div class="title-bar-title">Navigation Menu</div>
</div>

<div class="top-bar" id="responsive-menu">
  <div class="top-bar-left">
      <%= link_to image_tag('logo.png', width:200, height:80), home_path%>
  </div>

  <div class="top-bar-right topbar-hover-lines">
        <ul class="dropdown menu" data-dropdown-menu>
          <% if current_user %>
            <!-- only volunteers, managers, and admins  -->
            <% if (current_user.has_role?(:admin) || current_user.has_role?(:manager) || current_user.has_role?(:volunteer)) %>
              <%= render :partial => "volunteer_links" %>
            <% end %>

            <!-- only managers, and admins  -->
            <% if (current_user.has_role?(:admin) || current_user.has_role?(:manager)) %>
              <%= render :partial => "schools_users_rentals_link" %>
            <% end %>

            <!-- only teachers, managers, admins -->
            <% if current_user.role != 'volunteer' %>
              <%= render :partial => "partials/account_link.html.erb" %>
            <% end %>

          <% else %>
            <!-- if you're not logged in -->
            <% if current_user.nil? %>
              <li><h5><%= link_to  "LOG IN", new_user_session_path %></h5></li>
            <% end %>
          <% end %>
        </ul>
  </div>
</div>
