<%= simple_form_for @item_category, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Item Category</legend>

    <%= f.input :name %>
    <%= f.input :description %>
		<%= f.input :inventory_level %>
		<%= f.input :amount_available %>


    <div class="form-actions">
      <%= f.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel', assignments_path, :class => 'button alert radius' %>
    </div>
  </fieldset>
<% end %>
