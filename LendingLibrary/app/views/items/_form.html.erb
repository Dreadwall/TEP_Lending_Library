<%= simple_form_for @item, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Item</legend>


    <%= f.input :condition %>
		<%= f.input :readable_id %>

    <%= f.input :category, :collection => ItemCategory.all, input_html: {class: "avg"} %>
    <%= f.input :kit, :collection => Kit.all, allow_blank: true, input_html: {class: "avg"} %>


    <div class="form-actions">
      <%= f.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel', assignments_path, :class => 'button alert radius' %>
    </div>
  </fieldset>
<% end %>
