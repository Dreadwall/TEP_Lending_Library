<h1>Editing Item</h1>



<div class="grid-container" id="item-detail">
  <div class="grid-x grid-margin-x">

    <div class="cell-block-container cell auto large-offset-2 medium-offset-1">
      <div class="cell-block-y small-6">
        <%= render :partial => "item_picture" %>
        <a href="#">Change picture</a>
      </div>
      <div class="cell-block-y small-6">
        <%= render :partial => "item_components" %>
        <!-- TODO: add cancan -->
        <%= link_to(item_components_item_path(item: @item), class: 'button radius', remote: true) do %>
          EDIT KIT CONTENT
        <% end %>

      </div>
    </div>
    <div class="cell small-6">

      <%= render 'form', item: @item %>

    </div>
  </div>
</div>




<%= link_to 'Show', @item %> |
<%= link_to 'Back', items_path %>
