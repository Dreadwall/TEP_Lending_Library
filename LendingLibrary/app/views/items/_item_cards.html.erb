<div class="grid-container">
  <div class="grid-x grid-padding-x small-up-2 medium-up-3">

      <% @items.each do |item| %>
        <div class="product-card">
          <div class="product-card-thumbnail center">
            <%= link_to image_tag('kits/osmo.png', width:180, height:180), item_path(item)%>
          </div>
            <h2 class="product-card-title center"><%= item.item_category.name %></h2>
            <div class="form-actions">
              <%= link_to 'Details', item_path(item), :class => 'button radius' %>
            </div>
        </div>
      <% end %>

  </div>
</div>
