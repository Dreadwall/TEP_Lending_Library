<%= simple_form_for @user, :html => { :class => 'form-inline' } do |f| %>
  <fieldset>
    <legend>Your Profile Information</legend>

    <%= f.input :first_name, :input_html => { :class => 'avg' }%>
    <%= f.input :last_name,   :input_html => { :class => 'avg' }%>
    <%= f.input :email,  :input_html => { :class => 'avg' }%>
		<%= f.input :phone_num,  :input_html => { :class => 'avg' }%>
    <%= f.input :school_id, collection: School.active.alphabetical, include_blank: true, input_html: {class: "avg"} %>
    <%= f.input :class_size,  :input_html => { :class => 'avg' }%>

    <div class="form-actions">
      <%= f.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel', users_path, :class => 'button alert radius' %>
    </div>
  </fieldset>
<% end %>
