

<%= simple_form_for @user=User.find(3), :html => { :class => 'form-horizontal' } do |f| %>
<fieldset class='center'>
  <legend>Your Profile Information</legend>
  <table id="profile">
    <thead>
      <tr>
        <th>Name</th>
        <td><%=  @user.name  %></td>
      </tr>
      <tr>
        <th>Email</th>
        <td><%=  @user.email %></td>
      </tr>
      <tr>
        <th>Phone</th>
        <td><%=  @user.phone_num %></td>
      </tr>
      <tr>
        <th>School</th>
        <td><%=  @user.school.name %></td>
      </tr>
      <tr>
        <th>Class Size</th>
        <td><%=  @user.class_size%></td>
      </tr>
    </thead>

  </table>


</fieldset>

<div class="row">
    <div class="small-3 columns">
      <%= link_to 'Go back', items_path, :class => 'button radius info'  %>
      <%= link_to 'Cancel Rental', items_path, :class => 'button radius' %>
    </div>
    <div class="small-5 columns">
      Is this correct? <%= link_to 'Edit Information', edit_user_path(@user), :class => 'button radius'  %>
    </div>
    <div class="small-3 columns">
    <%= link_to 'Confirm Information', user_path(@user), :class => 'button radius success'%>
  </div>
</div>

<% end %>
