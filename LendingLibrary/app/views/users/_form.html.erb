
<%= simple_form_for @reservation, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Reservation</legend>

    <%= f.input :email %>
    <%= f.input :first_name %>
		<%= f.input :last_name %>
		<%= f.input :phone_num %>

    <%= f.input :role, :collection => User::ROLES, :prompt => true %>
    <%= f.input :class_size %>
		<%= f.input :school_id, collection: School.active.alphabetical, include_blank: true, input_html: {class: "avg"} %>

    <%= f.input :password %>
    <%= f.input :password_confirmation %>


    <div class="form-actions">
      <%= f.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel', assignments_path, :class => 'button alert radius' %>
    </div>
  </fieldset>
<% end %>
